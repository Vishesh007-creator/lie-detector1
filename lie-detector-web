  <div class="card">
    <h1>üß™ Fun Lie Detector</h1>
    <p class="sub">
      Typing ke base pe ek <b>masti wala</b> verdict.  
      Science nahi, sirf timepass üòÑ
    </p>

    <label for="answer">Apna answer yahan likho:</label>
    <textarea id="answer" placeholder="Sach sach likhna hai... shayad üòè"></textarea>

    <button onclick="analyze()">CHECK RESULT</button>

    <div id="result" class="result" style="display:none;"></div>

    <p class="footer">
      Disclaimer: Ye sirf fun project hai, real lie detector nahi üôè
    </p>
  </div>

  <script>
    function analyze() {
      const txt = document.getElementById("answer").value.trim();
      const res = document.getElementById("result");

      if (!txt) {
        res.style.display = "block";
        res.innerHTML = "Pehle kuch likh toh do üòÖ";
        return;
      }

      // basic analysis
      const lower = txt.toLowerCase();
      const words = txt.split(/\s+/).filter(Boolean).length;

      const hesitationWords = [
        "maybe", "i think", "not sure", "i don't know",
        "idk", "shayad", "kya pata", "ho sakta", "shyd"
      ];

      let hesitationCount = 0;
      hesitationWords.forEach(w => {
        if (lower.includes(w)) hesitationCount++;
      });

      let score = 0;

      // very short or very long answer
      if (words <= 3) score += 20;
      else if (words > 40) score += 10;

      // hesitation words
      score += hesitationCount * 15;

      // ALL CAPS ya bohot zyada ! ?
      if (txt === txt.toUpperCase() && words > 2) score += 15;
      const exclam = (txt.match(/!/g) || []).length;
      const ques = (txt.match(/\?/g) || []).length;
      if (exclam + ques > 4) score += 10;

      let verdict = "";
      let tagClass = "";

      if (score < 20) {
        verdict = "Lagta hai tum kaafi sachche lag rahe ho.\nScore: " + score;
        tagClass = "truth";
      } else if (score < 40) {
        verdict = "Thoda doubtful ho‚Ä¶ mix of sach & jugaa·∏ç üòè\nScore: " + score;
        tagClass = "maybe";
      } else {
        verdict = "Hmm‚Ä¶ system bol raha hai jhooth ka chance zyada hai üòà\nScore: " + score;
        tagClass = "lie";
      }

      res.style.display = "block";
      res.innerHTML = verdict + "\n\n" +
        `<span class="tag ${tagClass}">Fun Verdict Only</span>`;
    }
  </script>
